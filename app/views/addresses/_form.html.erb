<div class='well bd-component'>

	<%= form_for [@seller, @house, @address], html: {class: 'form-horizontal'} do |f| %>

		<div class= 'form-group'>
			<%= f.label :street, :class => 'col-lg-2 control-label' %>
			<div class= 'col-lg-10'>
				<%= f.text_field :street, :class => 'form-control' %>
			</div>
		</div>

		<div class= 'form-group'>
			<%= f.label :state, :class => 'col-lg-2 control-label' %>
			<div class= 'col-lg-10'>
				<%= f.text_field :state, :class => 'form-control' %>
			</div>
		</div>

		<div class= 'form-group'>
			<%= f.label :country, :class => 'col-lg-2 control-label' %>
			<div class= 'col-lg-10'>
				<%= f.text_field :country, :class => 'form-control' %>
			</div>
		</div>

		<div class= 'form-group'>
			<%= f.label :zip, :class => 'col-lg-2 control-label' %>
			<div class= 'col-lg-10'>
				<%= f.text_field :zip, :class => 'form-control' %>
			</div>
		</div>
		<%= f.submit class: 'btn btn-primary' %>
	<% end %>

</div>