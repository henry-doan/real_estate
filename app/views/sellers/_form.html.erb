<div class='well bd-component'>

	<%= form_for @seller, html: {class: 'form-horizontal'} do |f|%>

	<div class= 'form-group'>
		<%= f.label :name, :class => 'col-lg-2 control-label' %>
		<div class= 'col-lg-10'>
			<%= f.text_field :name, :class => 'form-control' %>
		</div>
	</div>

	<div class= 'form-group'>
		<%= f.label :info, :class => 'col-lg-2 control-label' %>
		<div class= 'col-lg-10'>
			<%= f.text_area :info, :class => 'form-control' %>
		</div>
	</div>

	<div class= 'form-group'>
		<%= f.label :rating, :class => 'col-lg-2 control-label' %>
		<div class= 'col-lg-10'>
			<%= f.text_field :rating, :class => 'form-control' %>
		</div>
	</div>

		<%= f.submit class: 'btn btn-primary' %>
	<% end %>

</div>