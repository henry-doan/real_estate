<h1>Login</h1>

<div class='well bd-component'>
<%= form_tag '/login', html: {class: 'form-horizontal'} do %>

	<div class= 'form-group'>
	Email: <%= text_field_tag :email %>
</div>

	<div class= 'form-group'>
	Password: <%= password_field_tag :password %> 
</div>
	<%= submit_tag "submit", class: 'btn btn-primary' %>
<% end %>
</div>
